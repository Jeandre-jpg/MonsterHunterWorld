                </div>
            </div>
        </nav>



    </header>
    <div class="row">
        <div class="col-2" style="padding-top: 150px;">
            <a class="bn31" id="homebase" style=" height: 60px; margin-bottom: 25px; margin-left: 100px; color: white;"><span class="bn31span">Home Base</span></a>

            <a class="bn31" id="bunker" style=" height: 60px; margin-bottom: 25px; margin-left: 100px; color: white;"><span class="bn31span">Pouch</span></a>

            <a class="bn31" id="pouch" style=" height: 60px; margin-bottom: 25px; margin-left: 100px; color: white;"><span class="bn31span">Bunker</span></a>


        </div>
        @foreach (var location in Model.allLocations)
        {
<div class="col-6 offset-1 container-@location.ID">

    <div class="mb-5 mb-lg-0 text-center text-lg-center">



        <div class="container-@location.ID container-fluid">
            <h1 class="display-1 lh-1 mb-3" style="color:white;">@location.Name</h1>

            <img src="@location.ImageURL" alt="Home Base" style="width:100%; height: 400px;" />
            <p class="lead fw-normalmb-2 " style="color: white; font-size: 18px; padding-top: 1rem; justify-content: left;">
                @location.Description
            </p>
        </div>

    </div>
</div>

                <div class="container-@location.ID col-3" style="overflow-y: scroll; scrollbar-base-color: black; height: 800px;">



                    @foreach (var item in location.items)
                    {






    <div id="container" style="box-shadow: 1px 5px 15px 0.5px green; background: black; text-align: center; border-radius: 5px; overflow: hidden; margin: 5em auto; padding: 20px; height: 300px; width: 400px;">

        <div class="product-details">

            <h1>@item.Name</h1>
            <p class="information">" @item.Description</p>

        </div>

        <div class="product-image">

            <img src="@item.ImageURL" />


            <div class="info">
                <h2> Description</h2>
                <ul>
                    <li><strong style=" padding-left: 10px;">Item Type : </strong>@item.ItemType</li>
                    <li><strong style=" padding-left: 10px;">Category : </strong>@item.GroupType</li>
                </ul>
                <div class="color">
                    <h2 style="color: #fff;">Total Amount: </h2>
                    <p class="homebase" style="color: #fff; padding-left: 20px;">@item.ItemCount</p>
                </div>

            </div>
        </div>

    </div>}

                </div>}



    </div>


    <!-- JavaScript Libraries -->
    <script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/js/bootstrap.bundle.min.js"></script>


    <script src="js/site.js"></script>

    <script>$(function () {
            $('.container-2').hide();
            $('.container-3').hide();
            $('.pouch').hide();
            $('.bunker').hide();

            $("#homebase").click(function () {
                $('.container-1').fadeTo(500, 1);
                $('.container-2').hide();
                $('.container-3').hide();
                $('.pouch').hide();
                $('.bunker').hide();
                $('.homebase').show();
            });

            $("#pouch").click(function () {
                $('.container-2').fadeTo(500, 1);
                $('.container-1').hide();
                $('.container-3').hide();
                $('.pouch').show();
                $('.bunker').hide();
                $('.homebase').hide();
            });

            $("#bunker").click(function () {
                $('.container-3').fadeTo(500, 1);
                $('.container-2').hide();
                $('.container-1').hide();
                $('.pouch').hide();
                $('.bunker').show();
                $('.homebase').hide();
            });
        });

        var swiper = new Swiper('.blog-slider', {
            spaceBetween: 30,
            effect: 'fade',
            loop: true,
            mousewheel: {
                invert: false,
            },
            // autoHeight: true,
            pagination: {
                el: '.blog-slider__pagination',
                clickable: true,
            }
        });</script>

    <style>

        ::-webkit-scrollbar {
            width: 10px;
        }


        ::-webkit-scrollbar-track {
            background: #000000;
        }

        ::-webkit-scrollbar-thumb {
            background: #888;
        }


            ::-webkit-scrollbar-thumb:hover {
                background: #555;
            }

        .card-body {
            margin: 0;
            padding: 15px;
            color: white;
            width: 100%;
            height: 200px;
            background-color: black;
        }

        $white: #FEFEFE;
        $dark: #484855;
        $greyLight: #D1CFD2;
        $greyDark: #9B999E;
        $grey: #B9B5BE;
        $red: #ef5350;

        body {
            height: 100vh;
            background: radial-gradient(circle, #D6A664, #F9CD8F);
            display: flex;
            justify-content: center;
            align-items: center;
            font-family: roboto;
        }

        .post {
            display: flex;
            width: 1000px;
        }

        .post-left {
            width: 40%;
            background-color: $dark;
            color: white;
            padding: 3em;
            position: relative;
        }

        .post-left_title {
            font-size: 2em;
            text-transform: uppercase;
            font-weight: 700;
        }

        .post-left_title_sub {
            font-size: 2em;
            text-transform: uppercase;
            font-weight: 300;
            margin-top: 0.25em;
        }

        .post-left_border {
            border: 2px solid $red;
            width: 15%;
            margin-top: 1em;
        }

        .post-left_author {
            position: absolute;
            bottom: 2em;
            display: flex;
            align-items: center;
            img

        {
            width: 2.5em;
            margin-right: 1em;
            border: 1px solid $white;
            border-radius: 50%;
        }

        }

        .post-right {
            width: 60%;
            padding: 20px;
            color: white;
        }

        .post-right_body {
            line-height: 2;
            p

        {
            margin-top: 1em;
            span

        {
            font-size: 2em;
        }

        }
        }

        .post-right_footer {
            display: flex;
            justify-content: space-between;
            box-shadow: 0px -4px 3px -2px rgba(0,0,0,0.1);
            top: -10px;
        }

        .post-right_footer_date {
            text-transform: uppercase;
            span

        {
            font-weight: 700;
        }

        }
        }
    </style>

</body>
