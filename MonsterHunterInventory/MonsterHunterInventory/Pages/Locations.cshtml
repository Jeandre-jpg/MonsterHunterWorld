@page
@model MonsterHunterInventory.Pages.LocationsModel
@{ }

<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="description" content="" />
    <meta name="author" content="" />
    <title>Home</title>

    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="author" content="JeandrÃ¨ De Villiers 190025" />
    <link rel="icon" type="image/x-icon" href="img/logo_home.png" />
    <!-- Bootstrap icons-->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css" rel="stylesheet" />
    <!-- Google fonts-->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Montserrat+Alternates:wght@100&family=Special+Elite&display=swap" rel="stylesheet">

    <link rel="icon" type="../img/logo_home.png" href="assets/favicon.ico" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link href="css/locations.css" rel="stylesheet" />
    <link href="css/index.css" rel="stylesheet" />


</head>

<body style="background-color: black; text-align: left; padding-top: -1.5rem;">

    <div class="row">
        <div class="col-2" style="padding-top: 150px;">
            <a class="bn31" id="homebase" style=" height: 150px; margin-bottom: 100px; margin-left: 100px;"><span class="bn31span">Home Base</span></a>

            <a class="bn31" id="pouch" style="height: 150px; margin-bottom: 100px; margin-left: 100px; "><span class="bn31span">Pouch</span></a>

            <a class="bn31" id="bunker" style="height: 150px; margin-bottom: 100px; margin-left: 100px; "><span class="bn31span">Bunker</span></a>


        </div>
        @foreach (var location in Model.allLocations)
            {
            <div class="col-6 offset-1 container-@location.ID">

                <div class="mb-5 mb-lg-0 text-center text-lg-center">
                    <p class="center fw-normalmb-5" style="color:white;">
                        Monster Hunter World"
                    </p>


                    <div class="container-@location.ID container-fluid">
                        <h1 class="display-1 lh-1 mb-3" style="color:white;">@location.Name</h1>
                        <p class="lead fw-normalmb-5" style="color:white;">Join the hunt across the world!</p>
                        <img src="@location.ImageURL" alt="Home Base" style="width:100%; height: 500px;" />
                        <p class="lead fw-normalmb-2 " style="color: white; font-size: 25px; padding-top: 5rem; justify-content: left;">
                            @location.Description
                        </p>
                    </div>
                    
                </div>
            </div>

            <div class="container-@location.ID col-3">



                @foreach (var item in location.items)
                {


         



                        <div id="container">

                            <div class="product-details">

                                <h1>@item.Name</h1>
                                <p class="information">" @item.Description</p>

                            </div>

                            <div class="product-image">

                                <img src="@item.ImageURL" />


                                <div class="info">
                                    <h2> Description</h2>
                                    <ul>
                                        <li><strong>Item Type : </strong>@item.ItemType</li>
                                        <li><strong>Category : </strong>@item.GroupType</li>
                                    </ul>
                                    <div class="color">
                                        <h2 style="color: #fff;">Total Amount:</h2>
                                        <p class="homebase" style="color: #fff;">@item.ItemCount</p>
                                    </div>

                                </div>
                            </div>

                        </div>



  


                    }

            </div>
            }



        </div>


    <!-- JavaScript Libraries -->
    <script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/js/bootstrap.bundle.min.js"></script>


    <script src="js/site.js"></script>

    <script>$(function () {
            $('.container-2').hide();
    $('.container-3').hide();
    $('.pouch').hide();
    $('.bunker').hide();

            $("#homebase").click(function () {
                $('.container-1').fadeTo(500, 1);
                $('.container-2').hide();
                $('.container-3').hide();
                $('.pouch').hide();
                $('.bunker').hide();
                $('.homebase').show();
            });

    $("#pouch").click(function () {
                $('.container-2').fadeTo(500, 1);
                $('.container-1').hide();
                $('.container-3').hide();
                $('.pouch').show();
                $('.bunker').hide();
                $('.homebase').hide();
            });

    $("#bunker").click(function () {
                $('.container-3').fadeTo(500, 1);
                $('.container-2').hide();
                $('.container-1').hide();
                $('.pouch').hide();
                $('.bunker').show();
                $('.homebase').hide();
            });
});
    </script>

</body>
</html>