    <link href="css/index.css" rel="stylesheet" />
</head>

<body style="background-color: black; text-align: left; padding-top: -1.5rem;">

    <div class="row">
        <div class="col-4" style="padding-top: 150px;">
            <a class="bn31" href="/" style=" height: 150px; margin-bottom: 100px; margin-left: 100px;"><span class="bn31span">Home Base</span></a>

            <a class="bn31" href="/" style="height: 150px; margin-bottom: 100px; margin-left: 100px; "><span class="bn31span">Pouch</span></a>

            <a class="bn31" href="/" style="height: 150px; margin-bottom: 100px; margin-left: 100px; "><span class="bn31span">Bunker</span></a>


        </div>
        <div class="col-4">

            <div class="mb-5 mb-lg-0 text-center text-lg-center">
                <p class="center fw-normalmb-5" style="color:white;">
                    Monster Hunter World"
                </p>
                <h1 class="display-1 lh-1 mb-3" style="color:white;">Homebase</h1>
                <p class="lead fw-normalmb-5" style="color:white;">Join the hunt across the world!</p>
                <img src="img/home_base_map.jpeg" alt="Home Base" style="width:100%" />

            </div>
        </div>

        <div class="col-2 offset-1">

            @foreach (var item in Model.allItems)
            {


                <div class="card" style="width: 50px;">
                    <div class="card-img-top" src="@item.ImageURL" alt="Card Image Cap"></div>
                </div>

                <div class="card">
                    <div class="card-body">
                        <div class="card-img-top" src="@item.ImageURL" alt="Card Image Cap"></div>
                        <h5 class="card-title">@item.Name</h5>
                        <h6 class="card-title">@item.ItemType</h6>
                        <h6 class="card-title">@item.GroupType</h6>
                        <p class="card-text">@item.count</p>

                    </div>
                </div>

            }

        </div>

    </div>
    <!-- JavaScript Libraries -->
    <script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="lib/wow/wow.min.js"></script>
    <script src="lib/easing/easing.min.js"></script>
    <script src="lib/waypoints/waypoints.min.js"></script>
    <script src="lib/counterup/counterup.min.js"></script>
    <script src="lib/owlcarousel/owl.carousel.min.js"></script>
    <script src="lib/tempusdominus/js/moment.min.js"></script>
    <script src="lib/tempusdominus/js/moment-timezone.min.js"></script>
    <script src="lib/tempusdominus/js/tempusdominus-bootstrap-4.min.js"></script>

    <!-- Template Javascript -->
    <script src="js/index.js"></script>

</body>
</html>