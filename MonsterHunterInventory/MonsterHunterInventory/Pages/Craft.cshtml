        </div>
    </div>
    <div class="row" style="padding-top: 50px; overflow-y: scroll; height: 800px; scrollbar-base-color: black; width: 100%; margin-left:-50px;">

        @foreach (var product in Model.allProducts)
        {
<div class="col-3 offset-1">
    <div class="block" style="margin: 10px; text-align: left; width: 100%; padding: 20px; height: 500px; color: white; border-radius: 10px; /* background-color: black; */ position: relative; background-position: center; background-repeat: no-repeat; background-size: contain; background-color: #1F1F1F;">
        <div class="imgcon">
            <div class="image" style="display:flex;margin: 10px;justify-content: center;">
                <img src="@product.ImageURL" style="width: 70px; height: 70px; margin-right: 30px;" />
                <h1 style=" margin-top: 10px; ">@product.Name</h1>
                <div class="count" style="padding-top: 10px; margin-left: 10px;">
                    <h1 id="textitem" style="float:right;">@product.ItemCount</h1>

                </div>

            </div>
        </div>
        <div class="header">
            <hr style="border: 2px solid white; border-radius: 5px; opacity: 1; top: 5px; background-color: white;">
            <h4 style="padding-top: 20px;">@product.ProductType</h4>

            <p>Ingredients:</p>
        </div>
        <div class="ingredients">
            @foreach (var ingredient in product.Ingredients)
            {


                if (ingredient != "")
                {
<p style="padding:10px; margin:10px; margin-left:20px; height:auto; width: 150px;">@ingredient</p>

                        <form>


                            @{ foreach (var ingredient in product.Ingredients)
                                {
        <input type="hidden" name="ingredients[]" value="@ingredient" /> if (product.ItemOne == ingredient)
        {
<span id="productoneid" style="float:right; margin-top: -10px;">@product.ItemOneId</span> }
}


if (product.ItemTwo == ingredient)
{

<span style="float:right; margin-top: -10px;">@product.ItemTwoId</span> }
if (product.ItemOne == ingredient)
{

<input class="btn btn-dark" type="submit" value="Craft" onclick="myFunction()" style="background-color: #289A5C; color: #fff; border-radius: 12px; font-weight: bold; padding: 10px 60px; font-size: 15px; box-shadow: 0px 8px 24px rgba(0, 0, 0, 0.2); margin-top: 10px;" />} }

                        </form>}
                                        }

        </div>

    </div>
</div>}
    </div>


